doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/index.css')
  title REPORTS
// nav bar   
.topnav
  .left
    a.active(href='/home') PARKVILLE batteries
  .right
    a(href='/logout') LOG OUT
    a(href='/reports') REPORTS
    a(href='/home') HOME

// table of reports
.container.py-5.h-100
    .container.row.justify-content-center
      .card.bg-light
        table.table
          thead.thead-dark
            tr
              th(scope='col' class='th') Client name
              th(scope='col' class='th') Phone number
              th(scope='col' class='th') Number plate 
               th(scope='col' class='th') Battery

              
          tbody
            if batteries.length 
            each battery in batteries 
             tr     
              td(class='td') #{battery.username}
              td(class='td') #{battery.phonenumber}
              td(class='td') #{battery.numberplate} 
              td(class='td') #{battery.battery}
              td
          
                div
                      button.btn.btn-primary(type='submit'  data-bs-target='#staticBackdrop' style='background-color:#f1f1f1; margin-right: 5px;')
                          img(src='/images/edit.png' style='width: 20px; height: 20px;')
                
                          form(method="GET" action="/deleteBattery/"+battery._id)
                            input(type="hidden" name="delete" value=battery._id)
                            button.btn.btn-danger(type='submit' data-bs-toggle='modal' onclick='myFunction()' data-bs-target='#staticBackdrop')
                              img(src='/images/delete.jpg' style='width: 20px; height: 20px;')
     
script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
