doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/index.css')
  title REPORTS
.topnav
  .left
    a.active(href='/home') PARKVILLE batteries
  .right
    a(href='/logout') LOG OUT
    a(href='/reports') REPORTS
    a(href='/home') HOME
.container
  .title PARKVILLE REPORTS
table.table
  thead
    tr
      th(scope='col') Client name
      th(scope='col') Phone Number
      th(scope='col') Phone Number
      th(scope='col') Date and time
      th(scope='col') battery
  tbody
    if batteries.length 
    each battery in batteries
     tr
      td #{battery.username}
      td #{battery.phonenumber}
      td #{battery.numberplate}  
      td #{battery.typeofcar}
      td #{battery.battery}
      td 
        a(href='#') Edit &nbsp;
        a(href='#') Delete

     
script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
