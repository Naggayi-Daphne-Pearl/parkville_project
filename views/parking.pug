head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title CAR PARKING UNIT
  // bootstrap CSS
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  // flatpickr for selecting date and time
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css')
  link(rel='stylesheet' href='/css/index.css')
.topnav
  .left
    a.active(href='/home') PARKVILLE PARKING
  .right
    a(href='/logout') LOG OUT
    a(href='#contact') REPORTS
    a(href='/home') HOME
.container
  .title CAR PARKING UNIT
  form(action='/parking' name='parking' method='POST' onsubmit='clientValidate()')
    .user-details
      .input-box
        // name
        span.details Name Of client
        input(typeofcar='text' placeholder='Enter Your Full Name' name='username')
        // error message
        #userName.text-danger.font-weight-bold.small
      .input-box
        // phone Number
        span.details Phone Number
        input(typeofcar='text' placeholder='070 XXXXXXX' name='phonenumber')
        // error message
        #phoneNumber.text-danger.font-weight-bold.small
      .input-box
        span.details Identity Card Number
        // Nin Number
        input(typeofcar='text' placeholder='NIN NUMBER' name='nin')
        // error message
        #nin.text-danger.font-weight-bold.small
      .input-box
        // Number Plate
        span.details Number plate
        input(typeofcar='text' placeholder='e.g UAX 666601D' name='numberplate')
        // error message
        #numberPlate.text-danger.font-weight-bold.small
      .input-box
        span.details(name='typeOfCar') Select type of car
        select#cars(name='typeOfCars of cars')
          option(value='Personal cars') PERSONAL CARS
          option(value='Trucks') TRUCKS
          option(value='Bodas') BODA BODA
          option(value='Taxi') TAXI
        // error message
        #typeOfCar.text-danger.font-weight-bold.small(name='typeOfCar')
      .input-box
        span.details Date and Time for Entry
        // date and time
        input(typeofcar='datetime-local' placeholder='Select Date' name='datetime')
      .input-box
        span.details Parking Slot
        input#slot(typeofcar='number' placeholder='parking slot' name='parkingslot')
        // error message
        #parkingSlot.text-danger.font-weight-bold.small(name='parkingSlot')
      .input-box
        span.details AMOUNT PAID
        select#cars(name='typeOfCars of cars')
          option(value='Personal cars') Amount per hour
          option(value='Trucks') 2000
          option(value='Trucks') 3000
          option(value='Bodas') 4000
          option(value='Taxi') 1000
        // error message
        #amount.text-danger.font-weight-bold.small(name='amount')
      .button
        input(type='submit' value='Register')
script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
// This will initate date and time in our form
script(src='https://cdn.jsdelivr.net/npm/flatpickr')
script.
  config ={
  enableTime: true,
  dateFormat: "Y-m-d H:i",
  }
  flatpickr("input=[type=datetime-local", {});
script(src='/validations/parking.js')
