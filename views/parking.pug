doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Parking form
  // bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  // flatpickr for selecting date and time
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css')
  link(rel='stylesheet' href='../css/index.css')
.topnav
  a.active(href='#home') PARKVILLE PARKING
  a(href='/FORMS/home.html') HOME
  a(href='#contact') REPORTS
  a(href='#about') LOG OUT
.container
  h1 PARKVILLE DAY AND NIGHT PARKING
  .title Booking Form
  form(action='/parking' method='POST')
    .user-details
      .input-box
        span.details Name Of client
        input(type='text' placeholder='Enter Your Full Name' name='nameofclient')
      .input-box
        span.details Phone Number
        input(type='text' placeholder='070 XXXXXXX' name='phonenumber')
      .input-box
        span.details Number plate
        input(type='text' placeholder='e.g UAX 666601D' name='numberplate')
      .input-box
        span.details Type Of Vehicle
        input(type='text' placeholder='Type of vehicle e.g Subaru' name='typeofcar')
      .input-box
        span.details Identity Card Number
        input(type='text' placeholder='NIN NUMBER' name='nin')
      .input-box
        span.details Date and Time for booking
        input(type='datetime-local' placeholder='Select Date' name='date')
      .gender-details
        span.gender-title Gender
        label(for='')
          input.gender(type='radio' name='male')
          | Female
        label(for='')
          input.gender(type='radio' name='female')
          | Male
      .button
        input(type='Submit' value='Register')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
// This will initate date and time in our form
script(src='https://cdn.jsdelivr.net/npm/flatpickr')
script.
  config ={
  enableTime: true,
  dateFormat: "Y-m-d H:i",
  }
  flatpickr("input=[type=datetime-local", {});
