doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title LogIn Form
  // bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/register.css')
.container
  h1 PARKVILLE PARKING
  .title Log in  Form
  form(action='/login' method='POST' name='login' onsubmit='return Validate()')
    .user-details
      // username
      .input-box
        span.details User Name 
        // input
        input#username(type='text' placeholder='Enter user-name' name='username')
        // error
        #userName.text-danger.font-weight-bold.small
      // password
      .input-box
        span.details Password
        // input
        input#password(type='password' placeholder='password' name='password')
      // error
      #pwd.text-danger.font-weight-bold.small(name='pwd')
      .sign
        | Have you forgotten your Password
      .button
        input(type='submit' value='Log In')
      .sign
        | Don&apos;t have an account? 
        a(href='/signup') Sign-up here
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
script(src='/validations/login.js')
