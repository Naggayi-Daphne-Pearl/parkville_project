head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title CAR-TYRE-FORM
  // bootstrap CSS
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  // flatpickr for selecting date and time
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css')
  link(rel='stylesheet' href='/css/index.css')
.topnav
  .left
    a.active(href='/home') PARKVILLE PARKING
  .right
    a(href='/logout') LOG OUT
    a(href='#contact') REPORTS
    a(href='/home') HOME
.container
  .title CAR TYRE CLINIC
  form(action='/tyre' method='POST' name='tyre' onsubmit='clientValidate()')
    .user-details
      .input-box
        // Name of client
        span.details Name Of client
        input(typeofcar='text' placeholder='Enter Your Full Name' name='username')
        // error message
        #userName.text-danger.font-weight-bold.small
      .input-box
        // phone Number
        span.details Phone Number
        input(typeofcar='text' placeholder='070 XXXXXXX' name='phonenumber')
        // error message
        #phoneNumber.text-danger.font-weight-bold.small
      .input-box
        span.details Number plate
        // Number plate
        input(typeofcar='text' placeholder='e.g UAX 666601D' name='numberplate')
        // error message
        #numberPlate.text-danger.font-weight-bold.small
      .input-box
        // type of car
        span.details Select typeOfcar of car
        select#cars(name='typeOfcars of cars')
          option(value='Personal cars') PERSONAL CARS
          option(value='Trucks') TRUCKS
          option(value='Bodas') BODA BODA
          option(value='Taxi') TAXI
        // error message
        #typeOfcar.text-danger.font-weight-bold.small
      .input-box
        // date and time
        span.details Date and Time for Entry
        input(typeofcar='datetime-local' placeholder='Select Date' name='datetime')
        // error message
        #dateTime.text-danger.font-weight-bold.small
      .input-box
        // car size
        span.details Car Tyre Size
        input(typeofcar='text' placeholder='tyre-size' name='size')
        // error message
        #size.text-danger.font-weight-bold.small
      .input-box
        // tyreMake
        span.details Tyre tyreMake
        input(typeofcar='text' placeholder='tyre-size' name='tyremake')
        // error message
        #tyreMake.text-danger.font-weight-bold.small
      .input-box
        span.details AMOUNT PAID
        select#cars(name='typeOfcars of cars')
          option(value='Personal cars') Puncture -- 5000
          option(value='Trucks') Flat tyre -- 5000
          option(value='Trucks') Valves --- 5000 
      .button
        input(typeofcar='Submit' value='Register')
script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
// This will initate date and time in our form
script(src='https://cdn.jsdelivr.net/npm/flatpickr')
script.
  config ={
  enableTime: true,
  dateFormat: "Y-m-d H:i",
  }
  flatpickr("input=[type=datetime-local", {});
script(src='/validations/cartyre.js')
