doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title SIGN-UP FORM
  // bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='./CSS/register.css')
.container
  h1 PARKVILLE PARKING
  .title Sign-up Form
  form#signup(action='/signup' onsubmit='return signUpValidate ()' method='POST')
    .user-details
      // User name
      .input-box
        span.details User Name 
        // input
        input#username(type='text' placeholder='Enter user-name' name='username')
        // error
        #uName.text-danger.font-weight-bold.small
      .input-box
        span.details Email address 
        // input
        input#email(type='text' placeholder='email' name='email')
        // error
        #email.text-danger.font-weight-bold.small
      // password
      .input-box
        span.details Password
        // input
        input#password(type='password' placeholder='password' name='password')
        // error
        #pwd1.text-danger.font-weight-bold.small
      // confirm password
      .input-box
        span.details Confirm Password
        // input
        input#password2(type='password' placeholder='Confirm Password' name='confirmpassword')
        // error
        #pwd2.text-danger.font-weight-bold.small
      .button
        input(type='Submit' value='Sign Up')
      .sign
        | Have an account? 
        a(href='./login') Log in here
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
